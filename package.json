{
  "name": "sms-backend",
  "version": "1.0.0",
  "main": "index.js",
  "prisma": {
    "seed": "cross-env NODE_ENV=development node prisma/seed.js"
  },
  "scripts": {
    "start": "cross-env NODE_ENV=production node src/server.js",
    "dev": "cross-env NODE_ENV=development nodemon src/server.js",
    "build:dev": "cross-env NODE_ENV=development npx prisma generate",
    "migrate:prod": "cross-env NODE_ENV=production npx prisma migrate deploy",
    "studio:dev": "cross-env NODE_ENV=development npx prisma studio",
    "studio:prod": "cross-env NODE_ENV=production npx prisma studio",
    "postinstall": "npx prisma generate && npx prisma migrate deploy",
    "seed": "cross-env NODE_ENV=development node prisma/seed.js",
    "db:reset": "cross-env NODE_ENV=development npx prisma migrate reset",
    "db:seed": "cross-env NODE_ENV=development npx prisma db seed"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/codedbyjer/sms-backend.git"
  },
